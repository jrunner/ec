<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment_setting_ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#CBCBCB"
        android:paddingBottom="0.2dp"
        android:paddingTop="0.2dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/row_selector" >

            <ImageView
                android:id="@+id/fragment_setting_iv_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/fragment_setting_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IluckySi"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/fragment_setting_iv_sex"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/fragment_setting_tv_total_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="100000"
                        android:textColor="#FF0000"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乐猜音乐,一个好玩的音乐社区!"
                    android:textColor="#CBCBCB"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#CBCBCB"
        android:orientation="vertical"
        android:paddingBottom="0.2dp"
        android:paddingTop="0.2dp" >

        <RelativeLayout
            android:id="@+id/fragment_setting_rl_help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/row_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/fragment_setting_rl_help"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="使用帮助"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_setting_rl_advice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0.2px"
            android:layout_marginTop="0.2px"
            android:background="@drawable/row_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/fragment_setting_rl_advice"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_setting_rl_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/row_selector" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/fragment_setting_rl_update"
                android:drawablePadding="4dp"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="版本更新"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_setting_ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#CBCBCB"
        android:paddingBottom="0.2dp"
        android:paddingTop="0.2dp" >

        <TextView
            android:id="@+id/fragment_setting_tv_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/row_selector"
            android:gravity="center"
            android:text="登陆"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>